<%- layout('layout1')  -%>

<header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="page-heading">
                    <h1>Add College</h1>
                </div>
            </div>
        </div>
    </div>
</header>




<div class="container">
    <div class="row">
        <div class="col-md-4 offset-md-4">
                <% if (message.length > 0) { %>
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismmiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <%= message %>
                </div>
                <% } %>
            <form method="POST" action="/add-college"> 




                <div class="control-group">
                    <div class="form-group my-5 floating-label-form-group controls">
                        <label>Representative Name</label>
                        <input type="text" name="rname" placeholder="Representative Name" class="form-control">
                    </div>
                </div>


                <div class="control-group">
                    <div class="form-group my-5 floating-label-form-group controls">
                        <label>Designation</label>
                        <input type="text" name="desig" placeholder="Designation" class="form-control">
                    </div>
                </div>


                <div class="control-group">
                    <div class="form-group my-5 floating-label-form-group controls">
                        <label>College Name</label>
                        <input type="text" name="cname" placeholder="College Name" class="form-control">
                    </div>
                </div>

                <div class="form-group my-5 text-center">
                    <button type="submit" class="btn btn-primary">Add College</button>
                </div>


            </form>
        </div>
    </div>
</div>