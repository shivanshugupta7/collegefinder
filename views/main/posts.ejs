<% layout("layout1") %>


<!-- Page Header -->
<header class="masthead" style="background-image: url('/img/post-bg.png')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
                    <h1></h1>
                    <h2 class="subheading"></h2>
                    <span class="meta">Posted by
                        <a href="#"><%= creviews.username %></a>
                        <%= creviews.createdAt.toDateString() %></span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <%= creviews.content %>
            </div>
        </div>
    </div>
</article>

<hr>